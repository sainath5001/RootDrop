{
  "name": "rootstock-airdrop-backend",
  "version": "1.0.0",
  "description": "Backend for ERC-1155 airdrop system with Merkle tree generation and API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "generate-merkle": "ts-node scripts/generate-merkle.ts",
    "push-root": "ts-node scripts/push-root.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "airdrop",
    "merkle",
    "rootstock",
    "erc1155",
    "runes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ethers": "^6.9.0",
    "merkletreejs": "^0.3.11",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/morgan": "^1.9.9",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}

